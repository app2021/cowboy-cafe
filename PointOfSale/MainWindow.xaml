<Window x:Class="PointOfSale.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PointOfSale"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1480">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>



        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="ItemSelectionButton" Grid.Row="0" >Item Selection</Button>
            <Button Name="CancelOrderButton" Grid.Row="0" >Cancel Order</Button>
            <Button Name="CompleteOrderButton" Grid.Row="0" >Complete Order</Button>
        </StackPanel>


        <local:MenuItemSelectionControl Grid.Column="0" Grid.Row="1"></local:MenuItemSelectionControl>
        <local:OrderSummaryControl Grid.Column="1" Grid.Row="1"></local:OrderSummaryControl>
    </Grid>
</Window>

<UserControl x:Class="PointOfSale.CustomizeAngryChicken"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">


    <UserControl.Resources>
        <Style TargetType="CheckBox">
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="Margin" Value="20"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="20"/>
        </Style>
    </UserControl.Resources>


    <Grid HorizontalAlignment="Center">
        <StackPanel Orientation="Vertical"  Margin="40">

            <TextBlock FontSize="30" Text="Customize Angry Chicken"/>

            <CheckBox IsChecked="{Binding Path=Bread}">Bread</CheckBox>

            <CheckBox IsChecked="{Binding Path=Pickle}">Pickle</CheckBox>



        </StackPanel>
    </Grid>
</UserControl>

<UserControl x:Class="PointOfSale.CustomizeCowpokeChili"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock FontSize="30" Text="Customize Cowpoke Chili"/>
        <StackPanel Orientation="Vertical"  Margin="40">

            <Label>Green Onions</Label>
            <CheckBox IsChecked="{Binding Path=GreenOnions}"/>

            <Label>Cheese</Label>
            <CheckBox IsChecked="{Binding Path=Cheese}"/>


            <Label>Sour Cream</Label>
            <CheckBox IsChecked="{Binding Path=SourCream}"/>

            <Label>Tortilla Strips</Label>
            <CheckBox IsChecked="{Binding Path=TortillaStrips}"/>


        </StackPanel>
    </Grid>
</UserControl>
